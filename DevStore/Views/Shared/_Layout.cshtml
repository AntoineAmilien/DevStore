<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DevStore</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/css/site.css">
    <link href="./main.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/css/Admin/main.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css" integrity="sha512-1PKOgIY59xJ8Co8+NE6FZ+LOAZKjy+KY8iq0G4B3CyeY6wYHN3yt9PW0XpSriVlkMXe40PTKnXrLnZ9+fkDaog==" crossorigin="anonymous" />

</head>
<body>

    <div class="app-container app-theme-white body-tabs-shadow fixed-sidebar fixed-header">

        <div class="app-header header-shadow">
            <div class="app-header__logo">
                <div class="logo-src">DevStore</div>
                <div class="header__pane ml-auto">
                    <div>
                        <button type="button" class="hamburger close-sidebar-btn hamburger--elastic" data-class="closed-sidebar">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="app-header__mobile-menu">
                <div>
                    <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                        <span class="hamburger-box">
                            <span class="hamburger-inner"></span>
                        </span>
                    </button>
                </div>
            </div>
            <div class="app-header__menu">
                <span>
                    <a type="button" asp-controller="Home" asp-action="Deconnexion" class="btn-icon btn-icon-only btn btn-danger btn-sm">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </span>
            </div>

            <div class="app-header__content">
                <div class="app-header-left">
                    <div class="search-wrapper">
                        <div class="input-holder">
                            <input type="text" class="search-input" placeholder="Type to search">
                            <button class="search-icon"><span></span></button>
                        </div>
                        <button class="close"></button>
                    </div>
                    <ul class="header-menu nav">
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="index" class="nav-link">
                                Accueil
                            </a>
                        </li>
                        <li class="btn-group nav-item">
                            <a asp-controller="Home" asp-action="articlesView" class="nav-link">
                                Nos Articles
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="app-header-right">
                    <div class="header-btn-lg pr-0">
                        <div class="widget-content p-0">
                            <div class="widget-content-wrapper">

                                <div class="widget-content-left  ml-3 header-user-info">
                                    <div class="widget-heading">
                                        @Model.utilisateur.Prenom
                                        @Model.utilisateur.Nom
                                    </div>
                                    <div class="widget-subheading">
                                        @Model.utilisateur.Email
                                    </div>
                                </div>
                                <div class=" ml-3">
                                    <a type="button" asp-controller="Home" asp-action="Deconnexion" class="btn-shadow p-1 btn btn-danger btn-sm">
                                        <i class="fas fa-sign-out-alt"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="app-main">
            <!-- V Menu lateral V-->
            <div class="app-sidebar sidebar-shadow">
                <div class="app-header__logo">
                    <div class="logo-src"></div>
                    <div class="header__pane ml-auto">
                        <div>
                            <button type="button" class="hamburger close-sidebar-btn hamburger--elastic" data-class="closed-sidebar">
                                <span class="hamburger-box">
                                    <span class="hamburger-inner"></span>
                                </span>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="app-header__mobile-menu">
                    <div>
                        <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
                <div class="app-header__menu">
                    <span>
                        <a type="button" asp-controller="Home" asp-action="Deconnexion" class="btn-icon btn-icon-only btn btn-danger btn-sm">
                            <i class="fas fa-sign-out-alt"></i>
                        </a>
                    </span>
                </div>
                <div class="scrollbar-sidebar">
                    <div class="app-sidebar__inner">
                        <ul class="vertical-nav-menu">
                            <li class="app-sidebar__heading">Dashboards</li>
                            <li>
                                @{
                                    string classActive = (ViewData["Title"].ToString() == "Dashboard") ? "mm-active" : "";
                                }
                                <a asp-controller="Admin" asp-action="adminView" class="@classActive">
                                    <i class="metismenu-icon fas fa-tachometer-alt"></i>
                                    Statistiques
                                </a>
                            </li>
                            <li class="app-sidebar__heading">Gestion des articles</li>
                            <li>
                                @{
                                    classActive = (ViewData["Title"].ToString() == "Articles") ? "mm-active" : "";
                                }
                                <a asp-controller="Admin" asp-action="viewAndAdminArticlesView" class="@classActive">
                                    <i class="metismenu-icon fas fa-pen"></i>
                                    Voir et administrer
                                </a>
                            </li>
                            <li>
                                @{
                                    classActive = (ViewData["Title"].ToString() == "New Article") ? "mm-active" : "";
                                }
                                <a asp-controller="Admin" asp-action="newArticleView" class="@classActive">
                                    <i class="metismenu-icon fas fa-plus"></i>
                                    Ajouter
                                </a>
                            </li>

                            <li class="app-sidebar__heading">Gestion des categories</li>
                            <li>
                                @{
                                    classActive = (ViewData["Title"].ToString() == "Categories") ? "mm-active" : "";
                                }
                                <a asp-controller="Admin" asp-action="viewAndAdminCategoriesView" class="@classActive">
                                    <i class="metismenu-icon fas fa-pen"></i>
                                    Voir et administrer
                                </a>
                            </li>
                            <li>
                                @{
                                    classActive = (ViewData["Title"].ToString() == "New Categorie") ? "mm-active" : "";
                                }
                                <a asp-controller="Admin" asp-action="newCategorieView" class="@classActive">
                                    <i class="metismenu-icon fas fa-plus"></i>
                                    Ajouter
                                </a>
                            </li>

                            <li class="app-sidebar__heading">Gestion des membres</li>
                            <li>
                                @{
                                    classActive = (ViewData["Title"].ToString() == "Membres") ? "mm-active" : "";
                                }
                                <a asp-controller="Admin" asp-action="viewAndAdminMembresView" class="@classActive">
                                    <i class="metismenu-icon fas fa-pen"></i>
                                    Voir et administrer
                                </a>
                            </li>

                            <li>
                                @{
                                    classActive = (ViewData["Title"].ToString() == "New Membre") ? "mm-active" : "";
                                }
                                <a asp-controller="Admin" asp-action="newMembreView" class="@classActive">
                                    <i class="metismenu-icon fas fa-plus"></i>
                                    Ajouter
                                </a>
                            </li>


                            <li class="app-sidebar__heading">Mon profil</li>
                            <li>
                                @{
                                    classActive = (ViewData["Title"].ToString() == "Utilisateur") ? "mm-active" : "";
                                }
                                <a asp-controller="Admin" asp-action="updateUtilisateurView" class="@classActive">
                                    <i class="metismenu-icon fas fa-pen"></i>
                                    Modifier mon profil
                                </a>
                            </li>

                        </ul>
                    </div>
                </div>
            </div>
            <!-- X Menu lateral X -->

            @RenderBody()
        </div>

    </div>

    @if (ViewData["Title"].ToString() == "Utilisateur")
    {
        <!-- Modal Modication du mot de passe-->
        <div class="modal fade" id="modifyPasswordModal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Modication du mot de passe</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">

                        <form asp-controller="Admin" asp-action="updatePasswordUtilisateur">
                            <div class="form-group">
                                <label>Mot de passe actuel</label>
                                <input name="passwordActuel" type="password" class="form-control" placeholder="Mot de passe actuel">
                            </div>
                            <div class="form-group">
                                <label>Nouveau mot de passe</label>
                                <input type="password" name="newPassword" class="form-control" placeholder="Nouveau Mot de passe">
                            </div>
                            <div class="form-group">
                                <label>Confirmer le mot de passe</label>
                                <input type="password" name="confirmNewPassword" class="form-control" placeholder="Confirmer le nouveau mot de passe">
                            </div>

                            <input type="submit" class="btn btn-primary" value="Changer mon mot de passer">
                        </form>

                    </div>
                </div>
            </div>
        </div>
     }

    

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>


    @RenderSection("Scripts", required: false)

    <!--Js-->
    <script src="~/js/Admin/main.js" charset="utf-8"></script>
    <!--x Js x-->
</body>
</html>
