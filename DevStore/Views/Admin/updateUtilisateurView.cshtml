@model DevStore.ViewModels.AdminViewModel
@{
    ViewData["Title"] = "Utilisateur";
}
    <div class="app-main__outer">
        <div class="app-main__inner">
            <div class="app-page-title">
                <div class="page-title-wrapper">
                    <div class="page-title-heading">
                        <div class="page-title-icon">
                            <i class=" icon-gradient bg-mean-fruit metismenu-icon fas fa-pen"></i>
                        </div>
                        <div>
                            Modifier un membre
                            <div class="page-title-subheading">
                                Formulaire pour modifier un membre de l'équipe.
                            </div>
                        </div>
                    </div>
                </div>
            </div>



            <div class="w-100 d-inline-block">

                <!-- V Formulaire de modification d'un membre V-->

                <div class="main-card mb-3 card">
                    <div class="card-body">
                        @if (ViewBag.ErrMsg != null)
                        {
                            <div class="alert alert-danger fade show" role="alert">
                                @ViewBag.ErrMsg
                            </div>
                        }

                        @if (ViewBag.ValidationMsg != null)
                        {
                            <div class="alert alert-success fade show" role="alert">
                                @ViewBag.ValidationMsg
                            </div>
                        }
                        <h5 class="card-title">Formulaire de modification</h5>
                        <form method="post" enctype="multipart/form-data" asp-controller="Admin" asp-action="updateUtilisateur" asp-route-Id="@Model.utilisateur.Id">

                            <div class="position-relative row form-group">
                                <label for="Nom" class="col-sm-2 col-form-label">Nom</label>
                                <div class="col-sm-10"><input value="@Model.utilisateur.Nom" name="Nom" placeholder="Nom du membre" type="text" class="form-control" required></div>
                            </div>
                            <div class="position-relative row form-group">
                                <label for="Prenom" class="col-sm-2 col-form-label">Prenom</label>
                                <div class="col-sm-10"><input value="@Model.utilisateur.Prenom" name="Prenom" placeholder="Prenom du membre" type="text" class="form-control" required></div>
                            </div>
                            <div class="position-relative row form-group">
                                <label for="Profession" class="col-sm-2 col-form-label">Profession</label>
                                <div class="col-sm-10"><input value="@Model.utilisateur.Email" name="Email" placeholder="Profession du membre" type="text" class="form-control" required></div>
                            </div>


                            <div class="position-relative row form-check">
                                <div class="d-flex justify-content-between col-10 offset-sm-2 ">
                                    <a type="button" href="#" class="btn btn-outline-primary" data-toggle="modal" data-target="#modifyPasswordModal">Nouveau mot de passe</a>
                                    <input type="submit" class="btn btn-primary" value="Modifier mon profil !">
                                </div>
                            </div>

                        </form>
                    </div>
                </div>



                <!-- X Formulaire de modification d'un membre X-->

            </div>
        </div>


        <script src="http://maps.google.com/maps/api/js?sensor=true"></script>
    </div>






